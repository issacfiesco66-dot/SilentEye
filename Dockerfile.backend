# SilentEye Backend - Fly.io (contexto: ra√≠z del repo)
FROM node:20-alpine

WORKDIR /app

# Copiar solo backend
COPY backend/package.json ./
RUN npm install

COPY backend/ .
RUN npx tsc && \
    cp src/db/schema.sql src/db/schema-simple.sql dist/db/

RUN npm prune --omit=dev

ENV NODE_ENV=production
ENV TCP_PORT=5000

EXPOSE 8080 5000

CMD ["node", "dist/index.js"]
