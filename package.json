{
  "name": "silenteye",
  "version": "1.0.0",
  "private": true,
  "description": "Plataforma de seguridad vehicular basada en GPS Teltonika FMB920",
  "workspaces": [
    "backend",
    "frontend",
    "simulator"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev -w backend",
    "dev:frontend": "npm run dev -w frontend",
    "dev:simulator": "npm run start -w simulator",
    "tcp:minimal": "npm run tcp:minimal -w backend",
    "migrate": "npm run migrate -w backend",
    "reset:postgis": "npm run reset:postgis -w backend",
    "seed": "npm run seed -w backend",
    "build": "npm run build -w backend && npm run build -w frontend",
    "start": "npm run start -w backend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
