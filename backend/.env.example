# PostgreSQL con PostGIS
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/silenteye

# JWT (OBLIGATORIO, mín. 32 caracteres - sin valor por defecto)
JWT_SECRET=change_this_to_a_very_secure_random_string_min_32_chars
# Duración de sesión: 24h, 8h, etc. (default: 24h)
# JWT_EXPIRES_IN=24h

# CORS (producción): dominios permitidos separados por coma
# CORS_ORIGINS=https://app.silenteye.com,https://admin.silenteye.com

# Mapbox (frontend)
MAPBOX_TOKEN=pk.your_mapbox_public_token

# Puertos
TCP_PORT=5000
HTTP_PORT=3001
WS_PORT=3002

# Teltonika: true = aceptar cualquier IMEI (recomendado para pruebas). false = solo IMEI en tabla vehicles
TELTONIKA_SKIP_WHITELIST=true

# Rate limiting (peticiones por 15 min)
RATE_LIMIT_MAX=100

# Login sin SMS: cuando true, el API devuelve el código OTP en la respuesta (para desarrollo/pruebas).
# En Fly: flyctl secrets set OTP_SHOW_IN_PROD=true -a tu-app
# Quitar cuando tengas SMS real.
# OTP_SHOW_IN_PROD=true
